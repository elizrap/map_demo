<p id="notice"><%= notice %></p>
<h1> Location </h1>
<p>
  <b>Address:</b>
  <%= @location.address %>
</p>

<p>
  <b>Latitude:</b>
  <%= @location.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @location.longitude %>
</p>

<h2> Nearbys </h2>
<% for location in @location.nearbys(10) %>
<ul>
  <li> <%= link_to location.address, location %>(<%=location.distance.round(2) %> miles) </li>
</ul>
 <% end %>

<p>
<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'View All', locations_path %>
</p>
